package es.polaflix.repositories;

import java.util.List;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.Repository;
import org.springframework.data.repository.query.Param;

import es.polaflix.domain.*;

public interface SeriesRepository extends Repository<Serie, Long>{

	List<Serie> findAll();
	
	Serie findByNombre(String nombre);
	
	 @Query("SELECT s FROM Serie s WHERE p.nombre LIKE CONCAT(:inicial,'%')")
	 public List<Serie> find(@Param("inicial") String inicial);
}
