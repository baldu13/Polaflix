package es.polaflix;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;

import es.polaflix.domain.Serie;
import es.polaflix.repositories.SeriesRepository;
import es.polaflix.repositories.Test;

@SpringBootApplication
public class DemoApplication{

	@Autowired
	static SeriesRepository sr;
	
	public static void main(String[] args) {
		SpringApplication.run(DemoApplication.class, args);
	}
	
	@Bean
	public CommandLineRunner runner(SeriesRepository sr){
		return args -> {
				List<Serie> series = sr.findByInicial('D');
				System.out.println(series.get(0).getNombre());
		};
	}
}
